extends layout

block content
  h1= title
  form(method='post', action='/updateGame')
    input(type='hidden', name='GameID', value= game.id)
    p Name of the New Game:
    input(type='string', name='Name', placeholder= game.attributes.Name)
    p What is the starting time?
    input(type='date', name='StartTime_date')
    input(type='time', name='StartTime_time')
    p What is the ending time?
    input(type='date', name='EndTime_date')
    input(type='time', name='EndTime_time')
    p What is the price for enter the game?
    input(type='number', step='0.01', name='Price', placeholder= game.attributes.price)
    p Potsize?
    input(type='number', name='PotSize', placeholder= game.attributes.PotSize)
    br
    br
    input(type='submit', value='Submit')
